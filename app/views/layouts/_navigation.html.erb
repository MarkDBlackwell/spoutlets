<div class="row">
  <div class="span4">
    <%= link_to "Spoutlets", root_path, :class => 'brand' %>
    <ul class="nav">
      <% if user_signed_in? %>
        <li>
        <%= link_to 'Logout', signout_path %>
        </li>
      <% else %>
        <li>
        <%= link_to 'Login', signin_path %>
        </li>
      <% end %>
      <% if user_signed_in? %>
        <% if current_user.has_role? :admin %>
          <li>
          <%= link_to 'Admin', users_path %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
  <!-- Right Nav -->
  <div class="span8">
    <ul class="nav pull-right">
      <li><a href="#"><i class="icon-white
                                icon-bookmark"></i> my therapist</a></li>
      <li class="divider-vertical"></li>
      <li><a href="#"><i class="icon-white
                                icon-bookmark"></i> my peers</a></li>
      <li class="divider-vertical"></li>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle"
           data-toggle="dropdown"><i class="icon-user
                                            icon-white"></i>
          my storyline <b class="caret"></b></a>
        <ul class="dropdown-menu">
          <li><a href="#">Profile</a></li>
          <li><a href="#">Settings</a></li>
          <li class="divider"></li>
          <li><a href="#">Logout</a></li>
        </ul>
      </li>
      <li>
        <!-- Log an Entry -->
        <button class="btn btn-primary"
                type="button" data-toggle="modal"
                data-target="#myModal"><i class="icon-plus
                                                 icon-white"></i> log an entry
        </button>
        <div class="modal fade hide" id="myModal" tabindex="-1" role="dialog"
             aria-labelledby="myModalLabel"
             aria-hidden="true">
          <div class="modal-header">
            <button type="button" class="close"
                    data-dismiss="modal" aria-hidden="true">Ã—</button>
            <h3 id="myModalLabel">Jan 13 2013 entry</h3>
          </div>
          <div class="modal-body">
            <form class="form-horizontal">
              <div class="control-group">
                <label class="control-label">Describe what's going on with you</label>
                <div class="controls">
                  <textarea rows="5" class="input-xlarge" placeholder="Write a bit about what happened, something you did, or how you're feeling... "></textarea>
                </div>
              </div>
              <div class="control-group">
                <label class="control-label">Upload an image capturing your feelings</label>
                <div class="controls">
                  <input type="file" onchange="if (this.value) {
                                               $('#localSpinner').show();
                                               filepicker.uploadFile(this, function(data){
                                               $('#localResult').text(JSON.stringify(data));
                                               $('#localSpinner').hide();
                                               });
                                               }
                                               "/>

                </div>
              </div>
              <div class="control-group">
                <label class="control-label">What's your mood?</label>
                <div class="controls">
                  <label class="radio inline">
                    <input type="radio" name="optionRadios" value="yellow"> yellow
                  </label>
                  <label class="radio inline">
                    <input type="radio" name="optionRadios" value="green"> green
                  </label>
                  <label class="radio inline">
                    <input type="radio" name="optionRadio" value="blue"> blue
                  </label>
                </div>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <form class="pull-left">
              <label class="checkbox inline">
                <input type="checkbox"> Keep it to myself
              </label>
              <label class="checkbox inline">
                <input type="checkbox" checked> Open to comments
              </label>
            </form>
            <button type="submit" class="btn btn-primary">Log it!</button>
          </div>
        </div>
        <!-- end of Add an Entry -->
      </li>
    </ul>
  </div> <!-- end of Right Nav -->
</div>
